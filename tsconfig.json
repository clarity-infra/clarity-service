{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@clareza/docker": [
        "libs/docker/src"
      ],
      "@clareza/docker/*": [
        "libs/docker/src/*"
      ],
      "@clareza/platform-manager": [
        "libs/platform-manager/src"
      ],
      "@clareza/platform-manager/*": [
        "libs/platform-manager/src/*"
      ],
      "@clareza/database": [
        "libs/database/src"
      ],
      "@clareza/database/*": [
        "libs/database/src/*"
      ]
    }
  }
}