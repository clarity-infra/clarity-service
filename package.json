{
  "name": "clareza",
  "private": true,
  "version": "0.1.0",
  "description": "a magical and modern cloud management",
  "license": "MIT",
  "author": {
    "name": "Abdul Aziz Al-Basyir",
    "email": "abdulazizalbasyir119@gmail.com",
    "url": "https://clareza.cloud"
  },
  "scripts": {
    "docker:dev": "docker compose up --build",
    "cli": "bun dist/main.js cli",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "bun dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.3.8",
    "@mikro-orm/migrations": "^6.3.8",
    "@mikro-orm/mysql": "^6.3.8",
    "@mikro-orm/nestjs": "^6.0.2",
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.2",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/swagger": "^7.4.0",
    "@scalar/nestjs-api-reference": "^0.3.145",
    "@tweedegolf/sab-adapter-amazon-s3": "^1.0.17",
    "@tweedegolf/storage-abstraction": "^2.1.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dockerode": "^4.0.2",
    "nest-commander": "^3.15.0",
    "node-gyp": "^10.2.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "ssh2": "^1.15.0",
    "swagger-typescript-api": "13.0.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/dockerode": "^3.3.31",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "ajv": "^8.17.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "run-script-webpack-plugin": "^0.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "webpack": "^5.93.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@clareza/docker(|/.*)$": "<rootDir>/libs/docker/src/$1",
      "^@clareza/platform-manager(|/.*)$": "<rootDir>/libs/platform-manager/src/$1",
      "^clareza/logger(|/.*)$": "<rootDir>/libs/logger/src/$1"
    }
  }
}